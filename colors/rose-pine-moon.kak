# palette
declare-option str base "rgb:232136"
declare-option str surface "rgb:2A273F"
declare-option str overlay "rgb:393552"
declare-option str muted "rgb:6E6A86"
declare-option str subtle "rgb:908CAA"
declare-option str text "rgb:E0DEF4"
declare-option str love "rgb:EB6F92"
declare-option str love_10 "rgb:3A2841"
declare-option str gold "rgb:F6C177"
declare-option str gold_10 "rgb:39313E"
declare-option str rose "rgb:EA9A97"
declare-option str rose_10 "rgb:392D41"
declare-option str pine "rgb:3E8FB0"
declare-option str pine_10 "rgb:252C44"
